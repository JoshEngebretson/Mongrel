class MenuSelector_SmallLeft : Widget;

void SetOrigin(int OrgX, int OrgY)
{
	SetPos(OrgX - 10, OrgY);
}

void OnDraw()
{
	SetTextAlign(hright, vtop);
	DrawText(8, 0, ">");
}

defaultproperties
{
	Width = 320;
	Height = 200;
}
